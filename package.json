{
  "name": "obsidian-mcp-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "packageManager": "bun@1",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "node --enable-source-maps --loader ts-node/esm src/index.ts",
    "dev:watch": "node --watch --enable-source-maps --loader ts-node/esm src/index.ts",
    "health": "node dist/health.js",
    "health:dev": "node --enable-source-maps --loader ts-node/esm src/health.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.2.0"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
